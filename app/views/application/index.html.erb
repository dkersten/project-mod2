<h1>Welcome to Tasty Tours</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <span><%= error %></span>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br><br>

    <%= f.label :email %>
    <%= f.email_field :email %>
    <br><br>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br><br>

    <%= f.submit %>
<% end %>